        "LLVM_DIR": "../../llvm/build/install/lib/cmake/llvm",
        "Clang_DIR": "../../llvm/build/install/lib/cmake/clang",
    },
    "cmake.generator": "Ninja",
    "files.eol": "\n",
    "C_Cpp.intelliSenseEngine": "Tag Parser",
